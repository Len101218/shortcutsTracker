import tkinter as tk

class CustomButton(tk.Button):
    def __init__(self, master=None, cnf={}, **kwargs):
        self.width = kwargs.pop("width", 1)
        self.height = kwargs.pop("height", 1)
        self.width2 = kwargs.pop("width2", None)
        self.height2 = kwargs.pop("height2", None)
        self.x2_factor = kwargs.pop("x2_factor", 0)

        super().__init__(master, cnf, **kwargs)

def on_button_click(event):
    print(f'Button clicked: {event.widget.cget("text")}')

root = tk.Tk()

# Set column weights
root.columnconfigure(0, weight=2)
root.columnconfigure(1, weight=2)

# Set row weights
root.rowconfigure(0, weight=2)
root.rowconfigure(1, weight=2)

# Define key data
key_data = {
    "text": "Button",
    "width": 1.5,  # Example float width
    "height": 1.5,  # Example float height
}

# Create button
button = CustomButton(root, text=key_data["text"], width=int(key_data["width"] * 1), height=int(key_data["height"] * 1), command=on_button_click)
button.grid(row=0, column=0, padx=2, pady=2, sticky="nsew")

root.mainloop()

